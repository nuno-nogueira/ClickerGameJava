<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clickergame.ui.MainController">
   <BorderPane prefHeight="300.0" prefWidth="300.0">
      <center>
         <StackPane fx:id="contentPane" prefHeight="50.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
               <VBox fx:id="cookiePanel" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER">
                  <children>
                     <Label fx:id="coinsLabel" alignment="TOP_CENTER" contentDisplay="TOP" text="Coins">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Label>
                     <Label fx:id="coinsPerSecond" text="Coins per second">
                        <VBox.margin>
                           <Insets bottom="20.0" />
                        </VBox.margin>
                     </Label>
                      <Button fx:id="clickButton" alignment="CENTER" onAction="#onCookie" text="Cookie Button" />
                  </children>
               </VBox>
               <VBox fx:id="buildingPanel" alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0">
               </VBox>
               <ScrollPane fx:id="upgradePanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" StackPane.alignment="CENTER" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

               </ScrollPane>
               <VBox fx:id="statsPanel" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER" />
            </children>
         </StackPane>
      </center>
      <bottom>
         <HBox alignment="CENTER" prefHeight="38.0" prefWidth="256.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
               <Button fx:id="cookieTabButton" mnemonicParsing="false" onAction="#onCookieTabClicked" text="Cookie Panel" />
               <Button fx:id="buildingTabButton1" mnemonicParsing="false" onAction="#onBuildingTabClicked" text="Buildings Panel" />
               <Button fx:id="upgradeTabButton" mnemonicParsing="false" onAction="#onUpgradeTabClicked" text="Upgrades Panel" />
               <Button fx:id="statsTabButton" mnemonicParsing="false" onAction="#onStatsTabClicked" text="Stats Panel" />
            </children>
         </HBox>
      </bottom>
   </BorderPane>
</StackPane>
